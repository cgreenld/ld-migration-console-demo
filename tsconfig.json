{
    "compilerOptions": {
        "baseUrl": "./src",
        "esModuleInterop": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "noEmit": false,
        "noImplicitAny": true,
        "outDir": "./dist",
        "paths": {
            "~/*": ["./*"]
        },
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "ESNext"
    },
    "include": ["*.ts", "**/*.ts"]
}
